@page
@model _1104001期末.Pages.ListModel
@{
    ViewData["Title"] = "質點總覽";
}

<div class="container mt-4">
    <h1 class="mb-4 text-white text-center dream-title">質點總覽</h1>
    <div class="row">
        @foreach (var character in Model.Characters)
        {
            <div class="card mb-5" style="max-width: 1200px;">
                <div class="row g-0 align-items-center">
                    <div class="col-md-2">
                        <img src="@character.ImagePath" class="img-fluid rounded-start" alt="@character.Name 頭像"
                             style="height: 100%; object-fit: cover;" />
                    </div>

                    <div class="col-md-10">
                        <div class="card-body">
                            <h5 class="card-title @("char-" + character.Id)">
                                @character.Name
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">@character.Sephirot</h6>
                            <blockquote class="blockquote">
                                <p>@character.Quote</p>
                            </blockquote>
                            <a class="btn btn-primary" asp-page="/Detail" asp-route-id="@character.Id">拼湊花瓣</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
